{
	"name": "blog.andrewbrey.com",
	"dockerComposeFile": "docker-compose.yml",
	"service": "ab-blog",
	"workspaceFolder": "/home/node/workspace",
	"postCreateCommand": "mkdir -p node_modules && sudo chown -R node:node node_modules && yarn install --frozen-lockfile --non-interactive --no-progress",
	"remoteUser": "node",
	"extensions": [
		"bradlc.vscode-tailwindcss",
		"dbaeumer.vscode-eslint",
		"EditorConfig.EditorConfig",
		"esbenp.prettier-vscode",
		"Gruntfuggly.todo-tree",
		"jock.svg",
		"meganrogge.template-string-converter",
		"mikestead.dotenv",
	],
	"portsAttributes": {
		"8000": {
			"label": "Blog",
			"onAutoForward": "openPreview"
		}
	},
	"settings": {
		"todo-tree.tree.autoRefresh": false,
		"todo-tree.general.tags": ["TODO", "FIXME", "IDEA", "NOTE"],
		"todo-tree.highlights.defaultHighlight": {
			"background": "#381b6e",
			"foreground": "#DBDD40",
			"iconColour": "#DBDD40",
			"icon": "checklist", // https://primer.style/octicons/
			"gutterIcon": true,
			"type": "tag-and-comment"
		},
		"todo-tree.highlights.customHighlight": {
			"FIXME": {
				"background": "#942A00",
				"iconColour": "#942A00",
				"foreground": "#FFFFFF",
				"type": "tag-and-comment"
			},
			"IDEA": {
				"background": "#254E53",
				"iconColour": "#254E53",
				"foreground": "#FFFFFF",
				"type": "tag-and-comment"
			},
			"NOTE": {
				"background": "#FFFFFF",
				"iconColour": "#FFFFFF",
				"foreground": "#000000",
				"type": "tag-and-comment"
			}
		},
		"todo-tree.filtering.excludeGlobs": ["**/node_modules/**/*"]
	}
}
