{
  "name": "blog.andrewbrey.com",
  "dockerComposeFile": "docker-compose.yml",
  "service": "ab-blog",
  "workspaceFolder": "/workspace",
  "appPort": [],
  "postCreateCommand": "sudo chown node:node node_modules && touch node_modules/.gitkeep",
  "runArgs": [],
  "extensions": [
    "dsznajder.es7-react-js-snippets",
    "bradlc.vscode-tailwindcss",
    "editorconfig.editorconfig",
    "esbenp.prettier-vscode",
    "gruntfuggly.todo-tree",
    "ms-vscode.vscode-typescript-tslint-plugin",
		"naumovs.color-highlight",
		"joelday.docthis",
		"luxcium.pop-n-lock-theme-vscode",
		"ahmadawais.shades-of-purple"
  ],
  "settings": {
    /********************
     * Language Specific *
     ********************/
    "[html]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
      "editor.codeActionsOnSave": {
        "source.organizeImports": true
      },
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.formatOnSave": true
    },

    /*************
     * Extensions *
     *************/
    "color-highlight.markRuler": false,
    "color-highlight.markerType": "background",
    "eslint.autoFixOnSave": true,
    "eslint.run": "onSave",
    "todo-tree.tree.autoRefresh": true,
    "todo-tree.general.tags": ["TODO", "FIXME", "IDEA", "COMMENT"],
    "todo-tree.highlights.defaultHighlight": {
      "background": "#DBDD40",
      "iconColour": "#DBDD40",
      "foreground": "#000000",
      "type": "text-and-comment"
    },
    "todo-tree.highlights.customHighlight": {
      "FIXME": {
        "background": "#942A00",
        "iconColour": "#942A00",
        "foreground": "#FFFFFF",
        "type": "text-and-comment"
      },
      "IDEA": {
        "background": "#254E53",
        "iconColour": "#254E53",
        "foreground": "#FFFFFF",
        "type": "text-and-comment"
      },
      "COMMENT": {
        "background": "#FFFFFF",
        "iconColour": "#FFFFFF",
        "foreground": "#000000",
        "type": "text-and-comment"
      }
    },
    "todo-tree.filtering.excludeGlobs": ["**/node_modules/**/*", "**/*.md"],
    "todo-tree.tree.expanded": true,
    "todo-tree.tree.flat": true,
    "todo-tree.tree.grouped": false,
    "todo-tree.tree.showCountsInTree": true,
    "todo-tree.tree.showInExplorer": false,
    "todo-tree.general.statusBar": "top three",
    "todo-tree.general.statusBarClickBehaviour": "reveal",
    "tslint.configFile": "tslint.json",
    "typescript.updateImportsOnFileMove.enabled": "always",

    /**************
     * Application *
     **************/
    "editor.codeActionsOnSave": {
      "source.fixAll.tslint": true
    },
    "search.exclude": {
			"**/node_modules/**/*": true,
			"extensions/**/*": true
    }
  }
}
